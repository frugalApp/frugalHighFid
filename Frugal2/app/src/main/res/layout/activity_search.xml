<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffdd99"
    tools:context="com.example.peter.frugal.Activities.Search">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <fragment
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.example.peter.frugal.Fragments.HeaderFragment"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/events_button"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Events"
                android:background="@drawable/boarder_butt_bottom"/>
            <Button
                android:id="@+id/items_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:background="#00000000"
                android:layout_toLeftOf="@id/events_button"
                android:text="Items"/>
            <Button
                android:id="@+id/search_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/events_button"
                android:text="Search"
                android:onClick="doSearch"
                android:background="@drawable/boarder_bottom"/>
            </RelativeLayout>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/search_words_bar"
                android:layout_width="270dp"
                android:background="@drawable/search_bar_background"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/search_words_button"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:text="\?"
                android:onClick="applySearch"
                android:background="@drawable/back_button"/>
            </LinearLayout>
        <fragment
            android:id="@+id/search_results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.example.peter.frugal.Fragments.SearchItemFragment"/>
    </LinearLayout>
</RelativeLayout>
