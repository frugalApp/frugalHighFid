<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/image_button_favorite"
        android:layout_width="175px"
        android:layout_height="175px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:scaleType="fitCenter"
        android:background="#00000000"
        android:src="@drawable/star_empty" />

    <ImageView
        android:id="@+id/searchItemImage"
        android:background="#00000000"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_width="175px"
        android:layout_height="175px" />

    <TextView
        android:id="@+id/search_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/searchItemImage"
        android:layout_toLeftOf="@id/image_button_favorite"
        android:textSize="50px"
        android:textStyle="bold"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="Item title"/>

    <TextView
        android:id="@+id/search_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/searchItemImage"
        android:layout_toLeftOf="@id/image_button_favorite"
        android:textSize="50px"
        android:layout_below="@id/search_item_title"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="Item description"/>

</RelativeLayout>