<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
      <shape 
        android:shape="rectangle">
          <!-- Set the border color of your layout here -->
            <stroke android:width="1dp" android:color="#ddbb77" />
            <solid android:color="#ddbb77" />

        </shape>
   </item>

    <!-- This is for border bottom but
    you can change this according to your need -->
    <item android:bottom="4dp" android:right="4dp" android:left="4dp" > 
      <shape 
        android:shape="rectangle">
            <!-- Set the background color of your layout here -->
            <stroke android:width="1dp" android:color="#ffdd99" /> 
            <solid android:color="#ffdd99" />
        </shape>
   </item>
   
</layer-list>